using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace TareaProg2
{
    public static class EjerFunciones
    {
        //  Crear un programa en C# que utilice funciones para determinar si un año es bisiesto.

        public static void Inicio()
        {
            Console.WriteLine("Este programa indica si un año es bisiesto \n ");

            int Year;
            Console.WriteLine("Ingrese el año a calcular: ");
            Year = Convert.ToInt32(Console.ReadLine());
            if (Year % 4 == 0 && (Year % 100 != 0 || Year % 400 == 0))
            {
                Console.WriteLine("Este año es bisiesto ");
            }
            else
            {
                Console.WriteLine("El año no es bisiesto ");
            }
            Console.ReadLine();
        }

    }
}
